# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-here-change-in-production

# Database
DATABASE_URL=postgresql://azure_user:postgresql@localhost:5432/azure_solar

# JWT
JWT_SECRET_KEY=your-jwt-secret-key-here

# Email Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=solar@azure-solar.pl

# Admin Configuration
ADMIN_EMAIL=admin@azure-solar.pl
ADMIN_PASSWORD=change-this-password

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# API Configuration
API_RATE_LIMIT=100

# Azure Configuration (Production)
AZURE_STORAGE_CONNECTION_STRING=
AZURE_STORAGE_CONTAINER_NAME=solar-documents

# Optional: SMS notifications (Twilio)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=
